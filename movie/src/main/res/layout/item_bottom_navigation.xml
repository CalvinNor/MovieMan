<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llNavItemContainer"
    style="@style/ClickableView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_large"
    android:paddingVertical="@dimen/padding_medium_large"
    tools:background="@color/black_full">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNavIcon"
        android:layout_width="@dimen/icon_size_small_medium"
        android:layout_height="@dimen/icon_size_small_medium"
        tools:src="@drawable/ic_popular" />

    <TextView
        android:id="@+id/tvNavTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_medium"
        tools:text="@string/bottom_nav_popular" />

</LinearLayout>
